/* pages/index/details/add_comment/add_comment.wxss */
page{
	background-color: #F0F0F3;
}

.info-wrapper{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	padding: 10px 10px 10px 0;
	margin-left: 10px;
	border-bottom: 1px solid #CBCBCB;
}
.info-wrapper>text:nth-child(2){
	color: #999;
}

.stars-wrapper{
	padding: 0;
}

.star-full{
  color: #FFCB00;
}
.star-empty{
  color: #CBCBCB;
}

.content-wrapper{
	background-color: #FFF;
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	padding: 10px
}
.content-wrapper>textarea{
	width: 100%;
	height: 80px;
	color: #CCC;
}

.submit-text{
	float: right;
	padding: 10px;
	color: #32B5D2;
}
